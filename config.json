{
  "embedding_model": {
    "name": "BAAI/bge-base-en-v1.5",
    "collection_name": "bge"
  },
  "prepend_chunks_and_queries": false,
  "skip_reformatting": false,
  "is_cli": false,

  "retrieval_settings": {
    "top_k": 2,
    "similarity_threshold": 0.6
  },
  "log_dir": "logs",
  "chat_history": {
    "chat_limit": 8,
    "context_limit": 4,
    "lookup_score_threshold": 0.25
  },

  "llm_engine": {
    "platform": "groq",
    "model_name": "llama-3.1-8b-instant",
    "defaults": {
      "temperature": 0.1,
      "max_tokens": 500
    }
  }
}